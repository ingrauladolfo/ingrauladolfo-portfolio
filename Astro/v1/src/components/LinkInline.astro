---
const { href, target } = Astro.props;
---

<button
  type="button"
  class="mt-[40px]text-white bg-blue-700 hover:bg-blue-800 focus:outline-none focus:ring-4 focus:ring-blue-300 font-medium rounded-full text-sm px-5 py-2.5 text-center me-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"
>
  <a
    href={href}
    role="link"
    target={target}
    class="inline-flex items-center text-lg font-medium text-red-500 dark:text-yellow-200 dark:hover:text-red-300 hover:text-yellow-700"
  >
    <slot />
  </a>
</button>
